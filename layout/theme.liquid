<!DOCTYPE html>

<html lang="{{ request.locale.iso_code }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
       
        {%- if canonical_url != blank  -%}
            <link rel="canonical" href="{{ canonical_url }}">
        {%- endif -%}

        {% if settings.favicon_enable %}
            <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" />
            <link rel="apple-touch-icon" href="{{ 'favicon.png' | asset_url }}" />
        {% endif %}

        <title>
            {{ page_title }}
            {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
            {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
            {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
        </title>

        {% if page_description %}
            <meta name="description" content="{{ page_description | escape }}">
        {% endif %}

        {% include 'meta-tags' %}
        {% include 'css-variables' %}

        <!--<script src="{{ 'global.js' | asset_url }}" defer="defer"></script>-->
        
        {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }} 
        {{ 'danymay.css' | asset_url | stylesheet_tag }} 

        {{ content_for_header }}
    </head>
    <body class="custom-scrollbars">

        <main class="page">

          <!-- Header -->
          {% section 'header' %}

            <div class="page__container">
                <div class="page__content">
                    <div class="content__container">
                        <div class="content">
                            {{ content_for_layout }}
                        </div>

                         <!-- Footer -->
                        {% section 'footer' %}

                    </div>
                </div>
            </div>
        </main>
        

        <div class='scrolltop'>
            <div class='scroll'>
                <span>{{ 'general.backToTop' | t }}</span>
                <svg class="svg-icon">
                    <use xlink:href="#svg-arrow-right-long"></use>
                </svg>
            </div>
        </div>


        <!-- Scripts -->
        {{ 'jquery-3.6.0.min.js' | asset_url | script_tag }}   
        {{ 'bootstrap.bundle.min.js' | asset_url | script_tag }} 
